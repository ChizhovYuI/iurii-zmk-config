#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout;
    };

    physical_layout: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Iurii 40-key";
        transform = <&default_transform>;
        kscan = <&kscan0>;

        keys  //                   w    h    x    y   rot  rx   ry
            = <&key_physical_attrs 100 100    0   25    0   0    0>   // Q
            , <&key_physical_attrs 100 100  100   12    0   0    0>   // W
            , <&key_physical_attrs 100 100  200    0    0   0    0>   // E
            , <&key_physical_attrs 100 100  300    5    0   0    0>   // R
            , <&key_physical_attrs 100 100  400   15    0   0    0>   // T
            , <&key_physical_attrs 100 100  600   15    0   0    0>   // Y
            , <&key_physical_attrs 100 100  700    5    0   0    0>   // U
            , <&key_physical_attrs 100 100  800    0    0   0    0>   // I
            , <&key_physical_attrs 100 100  900   12    0   0    0>   // O
            , <&key_physical_attrs 100 100 1000   25    0   0    0>   // P
            , <&key_physical_attrs 100 100    0  125    0   0    0>   // A
            , <&key_physical_attrs 100 100  100  112    0   0    0>   // S
            , <&key_physical_attrs 100 100  200  100    0   0    0>   // D
            , <&key_physical_attrs 100 100  300  105    0   0    0>   // F
            , <&key_physical_attrs 100 100  400  115    0   0    0>   // G
            , <&key_physical_attrs 100 100  600  115    0   0    0>   // H
            , <&key_physical_attrs 100 100  700  105    0   0    0>   // J
            , <&key_physical_attrs 100 100  800  100    0   0    0>   // K
            , <&key_physical_attrs 100 100  900  112    0   0    0>   // L
            , <&key_physical_attrs 100 100 1000  125    0   0    0>   // ;
            , <&key_physical_attrs 100 100    0  225    0   0    0>   // Z
            , <&key_physical_attrs 100 100  100  212    0   0    0>   // X
            , <&key_physical_attrs 100 100  200  200    0   0    0>   // C
            , <&key_physical_attrs 100 100  300  205    0   0    0>   // V
            , <&key_physical_attrs 100 100  400  215    0   0    0>   // B
            , <&key_physical_attrs 100 100  600  215    0   0    0>   // N
            , <&key_physical_attrs 100 100  700  205    0   0    0>   // M
            , <&key_physical_attrs 100 100  800  200    0   0    0>   // ,
            , <&key_physical_attrs 100 100  900  212    0   0    0>   // .
            , <&key_physical_attrs 100 100 1000  225    0   0    0>   // /
            , <&key_physical_attrs 100 100    0  312    0   0    0>   // SPC (col1)
            , <&key_physical_attrs 100 100  100  300    0   0    0>   // TAB (col2)
            , <&key_physical_attrs 100 100  200  305    0   0    0>   // ESC (col3)
            , <&key_physical_attrs 100 100  300  315    0   0    0>   // SYM (col4)
            , <&key_physical_attrs 100 100  400  325    0   0    0>   // SHFT (col0)
            , <&key_physical_attrs 100 100  600  330    0   0    0>   // RET (col5)
            , <&key_physical_attrs 100 100  700  330    0   0    0>   // BSPC (col6)
            , <&key_physical_attrs 100 100  800  330    0   0    0>   // CTRL (col7)
            , <&key_physical_attrs 100 100  900  330    0   0    0>   // SHFT (col8)
            , <&key_physical_attrs 100 100 1000  330    0   0    0>   // F13 (col9)
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        // Left (5 cols)                          Right (5 cols)
        // | Q  | W  | E  | R  | T  |            | Y  | U  | I  | O  | P  |
        // | A  | S  | D  | F  | G  |            | H  | J  | K  | L  | ;  |
        // | Z  | X  | C  | V  | B  |            | N  | M  | ,  | .  | /  |
        // | SPC| GUI| ALT| mo1|SHFT|            |BSPC|ENT |mo1 |SHFT|CTRL|
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)    RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)    RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)    RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
            RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,0)    RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";

        row-gpios
            = <&gpio1 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D7 = row0
            , <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D8 = row1
            , <&gpio1 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D9 = row2
            , <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // D10 = row3
            ;
    };
};
